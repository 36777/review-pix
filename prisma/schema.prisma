// schema.prisma

//? -----> CONFIGURAÇÕES DO PRISMA
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "debian-openssl-1.1.x"]
}

model User {
  id    String  @id @default(uuid()) @map("_id")
  email String? @unique
  nome  String?
  tel   String? @unique
  cpf   String? @unique

  @@map("users")
}

model Checkout {
  id String @id @default(uuid()) @map("_id")
}
